                    <listEvent>
                    <event>
                        <desc>
                            Wherever John went, he healed the sick and exorcised demons. 
                        </desc>
                        <ptr target="http://syriaca.org/keyword/miracles"/>
                    </event>
                </listEvent>
                <bibl type="primary"><ptr target="http://syriaca.org/work/795"/><citedRange unit="pp">42-43</citedRange></bibl><bibl type="primary"><ptr target="http://syriaca.org/bibl/1409"/><citedRange unit="pp">42-43</citedRange></bibl>
